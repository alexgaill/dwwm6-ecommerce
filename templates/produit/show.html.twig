{% extends 'base.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}
	<h1>Produit</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ produit.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ produit.nom }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ produit.description }}</td>
			</tr>
			<tr>
				<th>Prix</th>
				<td>{{ produit.prix }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td><img src={{ asset('images/produits/' ~ produit.image) }} alt={{produit.nom}}></td>
			</tr>
		</tbody>
	</table>

	<div class="mt-3 col-6">
		{% include "panier/_form.html.twig" %}
	</div>

	<a href="{{ path('produit_index') }}">back to list</a>

	<a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>

	{{ include('produit/_delete_form.html.twig') }}
{% endblock %}
