{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!
{% endblock %}

{% block body %}
	<div class="mt-5">
		<table>
			<thead>
				<tr>
					<th>Nom du produit</th>
					<th>Quantit√©</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
                {% for panier in paniers %}
                    <tr>
                        <td>{{panier.produit.nom}}</td>
                        <td>{{panier.quantite}}</td>
                        <td>{{panier.total}}</td>
                    </tr>
                {% else %}
                      <tr>
                        <td colspan="3">Il n'y a pas de produits dans votre panier pour le moment</td>
                      </tr>  
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan=2 class="text-end">Total TTC</td>
                    <td>{{totalTTC}}</td>
                </tr>
                <tr>
                    <td colspan="3" class="text-center"><a href={{ path('payer') }}><button class="btn btn-primary">Payer</button></a></td>
                </tr>
            </tfoot>
		</table>
	</div>
{% endblock %}
